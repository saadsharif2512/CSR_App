<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_course_list" model="ir.ui.view">
        <field name="name">course.course.list</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
        <list>
                <field name="name"/>
                <field name="code"/>
                <field name="credit_hours"/>
                <field name="level"/>
                <field name="student_count" string="# Students"/>
            </list>
        </field>
    </record>

    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.course.form</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <header>
                        <button name="action_view_students" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="student_count" widget="statinfo" string="Students"/>
                        </button>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="credit_hours"/>
                            <field name="level"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids">
                                <list editable="bottom">
                                    <field name="student_id"/>
                                    <field name="status"/>
                                    <field name="grade"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_course_courses" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">course.course</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
