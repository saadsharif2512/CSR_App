<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_enrollment_list" model="ir.ui.view">
        <field name="name">enrollment.enrollment.list</field>
        <field name="model">enrollment.enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="date_enrolled"/>
                <field name="status"/>
                <field name="grade"/>
            </list>
        </field>
    </record>

    <record id="view_enrollment_form" model="ir.ui.view">
        <field name="name">enrollment.enrollment.form</field>
        <field name="model">enrollment.enrollment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="date_enrolled"/>
                            <field name="status"/>
                            <field name="grade"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_enrollment_enrollments" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">enrollment.enrollment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
