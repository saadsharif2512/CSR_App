<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student.student.list</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="age"/>
                <field name="status"/>
                <field name="course_count" string="# Courses"/>
            </list>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <header>
                        <button name="action_view_enrollments" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="course_count" widget="statinfo" string="Enrollments"/>
                        </button>
                        <field name="status" widget="statusbar"/>
                    </header>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="gpa" readonly="1"/>
                            <field name="is_active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids">
                                <list editable="bottom">
                                    <field name="course_id"/>
                                    <field name="date_enrolled"/>
                                    <field name="status"/>
                                    <field name="grade"/>
                                </list>
                            </field>
                        </page>
                        <page string="Chatter">
                            <field name="message_follower_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_student_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>